{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "compliance:check": "npm run license:check && npm run security:check",
        "license:check": "license-checker --json --out compliance/licenses.json || echo 'No production dependencies found'",
        "security:check": "npm audit --audit-level=moderate",
        "sbom:generate": "license-checker --json --out compliance/sbom-npm.json || echo 'No dependencies found'"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "license-checker": "^25.0.1",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.7"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "@vitejs/plugin-vue": "^6.0.1",
        "vue": "^3.5.23",
        "vue-router": "^4.6.3",
        "vuetify": "^3.10.9"
    }
}
